<% if signed_in? %>
<% @user ||= current_user %>
<div class="row">
	<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= @user.firstname %>'s current friends: (<%= @user.followers.count %>)
			<section>
				<!--%= render 'shared/stats' %-->
				<% if @users.any? %>
				<div class="user_avatars">
					<% @users.each do |user| %>
					<%= link_to gravatar_for(user, size: 30), user %>
					<% end %>
				</div>
				<% end %>
			</section>

		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>
		<br/>
		<br/>
		<br/>
		<br/>
		<div>
			Pending Friend Requests for <%= @user.name%>:
			<%= render 'users/follow_form' if signed_in? %>
			<!-- need to get this working with friend stuff-->
		</div>

	</aside>
	<div class="span8">

		<h3>Newsfeed</h3>
		<%= render 'shared/feed' %>
	</div>

</div>
<% else %>
<div class="center hero-unit">
	<h1>Welcome to FakeBook</h1>

	<h2> Welcome to FakeBook! </h2>

	<%= link_to "Sign in!", signin_path, class: "btn btn-large btn-primary" %>
	OR

	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>

</div>
<% end %>