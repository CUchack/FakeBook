<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1> <%= gravatar_for @user %>
			User Profile for <%= @user.name %> </h1>
		</section>
		<h2> Email:
		<br/>
		<%= @user.email%>
		<br/>
		<br/>
		<br/>
		Interests:
		<br/>
		<%= @user.interests%>
		<br/>
		<br/>
		<br/>
		Favorite Quotes:
		<br/>
		<%= @user.quotes%>
		<br/>
		<br/>
		<br/>
		About <%= @user.name%>:
		<br/>
		<%= @user.aboutyourself%> </h2>
	</aside>
	<div class="span8">
		<% if @user.microposts.any? %>
		<h3>Microposts (<%= @user.microposts.count %>)</h3>
		<ol class="microposts">
			<%= render @microposts %>
		</ol>
		<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>